<Application x:Class="GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI"
             StartupUri="View/Main.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ContentControl" x:Key="StandarFondFamily">
                <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
            </Style>
            <Style TargetType="Button" x:Key="StandarButton" BasedOn="{StaticResource StandarFondFamily}">
                <Setter Property="Foreground" Value="Black"></Setter>

            </Style>
            <Style TargetType="Label" x:Key="StandarLabel" BasedOn="{StaticResource StandarFondFamily}">
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>

            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
