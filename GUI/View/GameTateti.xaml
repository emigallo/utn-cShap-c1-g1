<Window x:Class="GUI.View.GameTateti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="GameTateti" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC87E11" Offset="0.2"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize=" 35">Jugaro 1 vs jugador 2</Label>
        </StackPanel>

        <Button  Grid.Row="1" Grid.Column="1" Content=" 0 , 0" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="1" Grid.Column="2" Content=" 0 , 1" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="1" Grid.Column="3" Content=" 0 , 2" Background="{x:Null}" BorderThickness="0,0,0,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="1" Content=" 1 , 0" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="2" Content=" 1 , 1" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="3" Content=" 1 , 2" Background="{x:Null}" BorderThickness="0,0,0,10" BorderBrush="Black"/>
        <Button  Grid.Row="3" Grid.Column="1" Content=" 2 , 0" Background="{x:Null}" BorderThickness="0,0,10,0" BorderBrush="Black"/>
        <Button  Grid.Row="3" Grid.Column="2" Content=" 2 , 1" Background="{x:Null}" BorderThickness="0,0,10,0" BorderBrush="Black"/>
        <Button  Grid.Row="3" Grid.Column="3" Content=" 2 , 2" Background="{x:Null}" BorderThickness="0,0,0,0" BorderBrush="Black"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="{Binding result, Mode=OneWay}" FontSize="45" Style="{StaticResource StandarLabel}"></Label>
        </StackPanel>
        
    </Grid>




</Window>
