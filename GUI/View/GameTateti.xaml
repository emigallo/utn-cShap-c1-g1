<Window x:Class="GUI.View.GameTateti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        
        Title="GameTateti" Height="450" Width="800">
    <Grid x:Name="Game">
        <Grid.Background>
            <ImageBrush ImageSource="/View/GAME.PNG"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button  Grid.Row="0"  Content="pj1"  Grid.ColumnSpan="2" >

            <Button.Background>
                <ImageBrush ImageSource="/View/BotonPj1.PNG"/>
            </Button.Background>
        </Button>
        <Button Grid.Column="5" Content="pj2" Grid.ColumnSpan="2" Margin="0,-10,0,10">
            <Button.Background>
                <ImageBrush ImageSource="/View/BotonPj2.PNG"/>
            </Button.Background>
        </Button>
        <Button  Grid.Row="1" Grid.Column="2" Content=" 0 , 0" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black" Margin="0,0,0,86" Grid.RowSpan="2"/>
        <Button  Grid.Row="1" Grid.Column="3" Content=" 0 , 1" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black" Margin="0,0,0,86" Grid.RowSpan="2"/>
        <Button  Grid.Row="1" Grid.Column="4" Content=" 0 , 2" Background="{x:Null}" BorderThickness="0,0,0,10" BorderBrush="Black" Margin="0,0,0,86" Grid.RowSpan="2"/>
        <Button  Grid.Row="2" Grid.Column="2" Content=" 1 , 0" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="3" Content=" 1 , 1" Background="{x:Null}" BorderThickness="0,0,10,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="4" Content=" 1 , 2" Background="{x:Null}" BorderThickness="0,0,0,10" BorderBrush="Black"/>
        <Button  Grid.Row="2" Grid.Column="2" Content=" 2 , 0" Background="{x:Null}" BorderThickness="0,0,10,0" BorderBrush="Black" Margin="0,86,0,0" Grid.RowSpan="2"/>
        <Button  Grid.Row="2" Grid.Column="3" Content=" 2 , 1" Background="{x:Null}" BorderThickness="0,0,10,0" BorderBrush="Black" Margin="0,86,0,0" Grid.RowSpan="2"/>
        <Button  Grid.Row="2" Grid.Column="4" Content=" 2 , 2" Background="{x:Null}" BorderThickness="0,0,0,0" BorderBrush="Black" Margin="0,86,0,0" Grid.RowSpan="2"/>

        <StackPanel Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="{Binding result, Mode=OneWay}" FontSize="45" Style="{StaticResource StandarLabel}"></Label>
        </StackPanel>

    </Grid>




</Window>
