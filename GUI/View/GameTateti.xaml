<Window x:Class="GUI.View.GameTateti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="GameTateti" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize=" 35">Jugaro 1 vs jugador 2</Label>
        </StackPanel>

        <Button  Grid.Row="1" Grid.Column="1" Content=" 0 , 0"/>
        <Button  Grid.Row="1" Grid.Column="2" Content=" 0 , 1"/>
        <Button  Grid.Row="1" Grid.Column="3" Content=" 0 , 2"/>
        <Button  Grid.Row="2" Grid.Column="1" Content=" 1 , 0"/>
        <Button  Grid.Row="2" Grid.Column="2" Content=" 1 , 1"/>
        <Button  Grid.Row="2" Grid.Column="3" Content=" 1 , 2"/>
        <Button  Grid.Row="3" Grid.Column="1" Content=" 2 , 0"/>
        <Button  Grid.Row="2" Grid.Column="2" Content=" 2 , 1" Height="87" Grid.RowSpan="2" VerticalAlignment="Bottom"/>
        <Button  Grid.Row="3" Grid.Column="3" Content=" 2 , 2"/>


    </Grid>




</Window>
